{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/x64-debug-windows/ion.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "1",
                "2",
                "3"
            ],
            "preLaunchTask": "build",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Linux",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "/usr/bin/gdb",
            "program": "${workspaceFolder}/out/build/x64-debug-linux/ion",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "1",
                "2",
                "3"
            ],
            "preLaunchTask": "build",
            "externalConsole": false
        }
    ]
}